{
  "name": "NineteenSevenFour.Gatehub",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "@nx-dotnet/core:build",
      "outputs": [
        "{workspaceRoot}/dist/apps/gatehub",
        "{workspaceRoot}/dist/intermediates/apps/gatehub"
      ],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release",
          "noDependencies": true
        }
      }
    },
    "serve": {
      "executor": "@nx-dotnet/core:serve",
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release",
          "noDependencies": true
        }
      }
    },
    "lint": {
      "executor": "@nx-dotnet/core:format"
    },
    "swagger": {
      "executor": "@nx-dotnet/core:update-swagger",
      "outputs": [
        "options.output"
      ],
      "options": {
        "output": "libs/gatehub-swagger/swagger.json"
      },
      "dependsOn": [
        "build"
      ]
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "changelog": true,
        "npm": false,
        "tagFormat": "NineteenSevenFour.Gatehub-v${VERSION}"
      }
    }
  },
  "tags": [
    "scope:api",
    "type:app"
  ]
}
