{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "NineteenSevenFour.Gatehub",
  "targets": {
    "build": {
      "executor": "@nx-dotnet/core:build",
      "outputs": [
        "{workspaceRoot}/dist/apps/gatehub",
        "{workspaceRoot}/dist/intermediates/apps/gatehub"
      ],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release",
          "noDependencies": true
        }
      }
    },
    "serve": {
      "executor": "@nx-dotnet/core:serve",
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release",
          "noDependencies": true
        }
      }
    },
    "lint": {
      "executor": "@nx-dotnet/core:format"
    },
    "swagger": {
      "executor": "@nx-dotnet/core:update-swagger",
      "outputs": ["options.output"],
      "options": {
        "output": "libs/gatehub-swagger/swagger.json"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": ["scope:api", "type:app"],
  "implicitDependencies": ["NineteenSevenFour.Gatehub.Domain", "NineteenSevenFour.Gatehub.Business", "NineteenSevenFour.Gatehub.Data.Sqlite"]
}
